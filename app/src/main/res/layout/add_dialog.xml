<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="200dp"
    android:divider="@drawable/divider"
    android:dividerPadding="1.5dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/dialog"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:singleLine="true"
            android:ems="10"
            android:text="课程名："></TextView>

        <EditText
            android:id="@+id/Ename"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:hint="（必填）"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/room"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="教室："></TextView>

        <EditText
            android:id="@+id/Eroom"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:hint="（选填）"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/week"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center|center_horizontal"
            android:text="周数："></TextView>

        <EditText
            android:id="@+id/Eweek"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:hint="（必填）"></EditText>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单周" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="双周" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="时间一："></TextView>

        <EditText
            android:id="@+id/Etime1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:hint="（必填）"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="时间二："></TextView>

        <EditText
            android:id="@+id/Etime2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:hint="（选填）"></EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>